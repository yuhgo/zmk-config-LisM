{
	"name": "ZMK Local Build",
	"build": {
		"dockerfile": "Dockerfile",
		"context": "."
	},
	"remoteUser": "root",
	"workspaceFolder": "/workspaces/zmk-config",
	"mounts": [
		"source=lism-zmk-root-user,target=/root,type=volume",
		"source=${localWorkspaceFolder},target=/workspaces/zmk-config,type=bind"
	],
	"postCreateCommand": "bash .devcontainer/setup-west.sh",
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.shell.linux": "/bin/bash",
				"files.associations": {
					"*.keymap": "devicetree"
				}
			},
			"extensions": [
				"ms-vscode.makefile-tools",
				"ms-azuretools.vscode-docker",
				"redhat.vscode-yaml",
				"zephyr-tools.zephyr-ide",
				"spadin.zmk-tools"
			]
		}
	}
}
